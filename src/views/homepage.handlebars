<div class="container-fluid d-flex">

   <div class="col flex-grow-1 p-2 m-2">

      <h3 class="card-title py-2 dm-sans-header">Search for tickets</h3>
      <div class="row mb-4 border py-3">
         <div class="col">
            <input type="text" id="mainSearch" class="form-control" placeholder="Enter artist or city" />
         </div>
         <div class="col">
            <button type="submit" class="btn btn-contrast hammersmith-one-regular">Search</button>
         </div>
      </div>

      <h3 class="card-title py-2 dm-sans-header">Featured Artist</h3>
      <div class="row border mb-5">
         <div class="col-md-4">
            <img src="/images/featured-artist-placeholder.jpg" class="img-fluid rounded-start py-3"
               alt="featured artist" />
         </div>
         <div class="col-md-8">

            <div class="mt-3">
               <h4 class="mb-3 pt-2 dm-sans-header">Electric Dream Machine</h4>
               <p class="py-2 dm-sans-body">Get ready to experience sonic magic when you see this
                  sultry glam rock band formed by Philadelphia bar owners Charlie Kelly
                  and Dennis Reynolds.</p>
            </div>
         </div>
      </div>

    <h3 class="card-title py-2 dm-sans-header">Upcoming Shows</h3>
    <div class="row">
      <div class="col">

            <table class="table dm-sans-body">
               <thead>
                  <tr>
                     <th scope="col"></th>
                     <th scope="col">Date</th>
                     <th scope="col">Artist</th>
                     <th scope="col">City</th>
                  </tr>
               </thead>
               {{#each fiveEventsSerial as |fNE| }}
               <tbody>
                  <tr>
                     <th scope="row"></th>
                     <td>{{event_date}}</td>
                     <td>{{artist.artist_name}}</td>
                     <td>{{venue.city}}</td>
                  </tr>
               </tbody>
               {{/each}}
            </table>
         </div>
      </div>

  </div>
  {{#unless logged_in}}
  <aside class="col-auto border p-2 mt-2 ms-2 dm-sans-body">
    <form class="p-2 login-form">
      <div class="mb-3">
        <label for="enterUsername" class="form-label"><strong>Username</strong></label>
        <input
          type="text"
          id="username-login"
          class="form-control"
          placeholder="Enter your username"
        />
      </div>
      <div class="mb-3">
        <label for="enterPassword" class="form-label"><strong>Password</strong></label>
        <input
          type="text"
          id="password-login"
          class="form-control"
          placeholder="Enter your password"
        />
      </div>
      <button type="submit" class="btn btn-contrast mt-2 me-1">Login</button>
      <a href="/login"><button type="button" class="btn btn-contrast mt-2">Create Account</button></a>
    </form>
  </aside>
  {{/unless}}

</div>