<div class="container-fluid d-flex">

  <div class="col flex-grow-1 p-2 m-2">

    <h3 class="card-title py-2">Search for tickets</h3>
    <div class="row mb-4 border py-3">
      <div class="col">
        <input
          type="text"
          id="mainSearch"
          class="form-control"
          placeholder="Enter artist or city"
        />
      </div>
      <div class="col">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>

    <h3 class="card-title py-2">Featured Artist</h3>
    <div class="row border mb-5">
      <div class="col-md-4">
        <img
          src="/images/featured-artist-placeholder.jpg"
          class="img-fluid rounded-start py-3"
          alt="featured artist"
        />
      </div>
      <div class="col-md-8">

        <div class="mt-3">
          <h4 class="mb-3 pt-2">Electric Dream Machine</h4>
          <h6 class="py-2">Get ready to experience sonic magic when you see this
            sultry glam rock band formed by Philadelphia bar owners Charlie Kelly
            and Dennis Reynolds.</h6>
        </div>
      </div>
    </div>

    <h3 class="card-title py-2">Upcoming Shows</h3>
    <div class="row border">
      <div class="col">

        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Date</th>
              <th scope="col">Artist</th>
              <th scope="col">City</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row"></th>
              <td>3/1/24</td>
              <td>Electric Dream Machine</td>
              <td>Minneapolis</td>
            </tr>
            <tr>
              <th scope="row"></th>
              <td>3/4/24</td>
              <td>Pecan Sandies</td>
              <td>Los Angeles</td>
            </tr>
            <tr>
              <th scope="row"></th>
              <td>3/5/24</td>
              <td>Death Gary</td>
              <td>Baltimore</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <aside class="col-auto border p-2 ms-3">
    <form class="p-2">
      <div class="mb-3">
        <label for="enterUsername" class="form-label">Username</label>
        <input
          type="text"
          id="enterUsername"
          class="form-control"
          placeholder="Enter your username"
        />
      </div>
      <div class="mb-3">
        <label for="enterPassword" class="form-label">Password</label>
        <input
          type="text"
          id="enterPassword"
          class="form-control"
          placeholder="Enter your password"
        />
      </div>
      <button type="submit" class="btn btn-primary mt-2 me-1">Login</button>
      <button type="submit" class="btn btn-primary mt-2">Create Account</button>
    </form>
  </aside>

</div>