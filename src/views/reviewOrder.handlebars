<div class="m-3">
  <h3>Review Order</h3>
  <div class="row">
    <div class="col">
      <table class="table dm-sans-body mt-1">
        <tbody class="flex-box">
          <thead>
            <tr>
              <th></th>
              <th>Date</th>
              <th>Artist</th>
              <th>City</th>
              <th>Seat Grade</th>
              <th>Qty</th>
              <th>Price</th>
            </tr>
          </thead>
          <tr>
            <th>Ticket(s) Selected:</th>
            <td>{{format_date purchase.performanceDate.event_date}}</td>
            <td>{{purchase.performanceDate.artist.artist_name}}</td>
            <td>{{purchase.performanceDate.venue.city}}</td>
            <td>{{purchase.ticketPrice.seat_grade_desc}}</td>
            <td>{{purchase.seat_count}}</td>
            <td>${{purchase.ticketPrice.seat_base_price}}</td>
          </tr>
          <tbody class="table-group-divider">
            <tr>
              <td colspan="5" class="text-end">
                <table class="table table-borderless">
                  <tr>
                    <td>Sales Tax ({{purchase.customer.state}} resident)</td>
                    <td></td>
                  </tr>
                  <tr>
                    <td>Fees</td>
                  </tr>
                  <tr>
                    <td>Total</td>
                  </tr>
                </table>
              </td>
            </tr>
          </tbody>
        </tbody>
      </table>
      <button type="submit" class="btn btn-contrast my-2">Purchase</button>
    </div>
  </div>
</div>

<script src="./js/script.js"></script>